  "keywords": [
    "typescript",
    "npm",
    "npm package",
    "generator"
  ],
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.6",
    "jest": "^24.7.1",
    "nodemon": "^1.18.11",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.4"
